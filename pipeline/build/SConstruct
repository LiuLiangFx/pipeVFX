            ' -DCMAKE_EXE_LINKER_FLAGS="$LDFLAGS -lssl"'
            ' -DCMAKE_MODULE_LINKER_FLAGS="$LDFLAGS -lssl"'
            ' -DCMAKE_SHARED_LINKER_FLAGS="$LDFLAGS -lssl"',   
