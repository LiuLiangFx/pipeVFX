bzip2 = build.make(
        ARGUMENTS,
        'bzip2',
        download=[
          (
            'http://www.bzip.org/1.0.6/bzip2-1.0.6.tar.gz',
            'bzip2-1.0.6.tar.gz',
            '1.0.6',
            '00b516f4704d4a7cb50a1d97e6e8e15b'
          ),
        ],
        cmd = [
            'make -j $DCORES CC=$CC CFLAGS="$CFLAGS -O2 -g -D_FILE_OFFSET_BITS=64" LDFLAGS="$LDFLAGS" PREFIX=$TARGET_FOLDER',
            'make -j $DCORES PREFIX=$TARGET_FOLDER install',
        ],
)
build.allDepend.append(bzip2)

